<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="extractionemrConfig" class="org.openmrs.module.extractionemr.ExtractionemrConfig"/>

    <bean id="extractionemrDao" class="org.openmrs.module.extractionemr.api.dao.ExtractionemrDao">
        <property name="sessionFactory">
            <ref bean="dbSessionFactory" />
        </property>
    </bean>

    <bean id="extractionPatientDAO" class="org.openmrs.module.extractionemr.api.dao.impl.ExtractionPatientDAOImpl">
        <property name="sessionFactory">
            <ref bean="dbSessionFactory"/>
        </property>
    </bean>

    <bean id="extractionEncounterDAO" class="org.openmrs.module.extractionemr.api.dao.impl.ExtractionEncounterDAOImpl">
        <property name="sessionFactory">
            <ref bean="dbSessionFactory"/>
        </property>
    </bean>

    <bean id="extractionObsDAO" class="org.openmrs.module.extractionemr.api.dao.impl.ExtractionObsDAOImpl">
        <property name="sessionFactory">
            <ref bean="dbSessionFactory"/>
        </property>
    </bean>

    <!-- Wraps nigeriaPatientService methods in DB transactions and OpenMRS interceptors,
    which set audit info like dateCreated, changedBy, etc.-->
    <bean id="extractionPatientService"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.extractionemr.api.service.impl.ExtractionPatientServiceImpl">
                <property name="dao" ref="extractionPatientDAO" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

    <bean id="extractionEncounterService"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.extractionemr.api.service.impl.ExtractionEncounterServiceImpl">
                <property name="dao" ref="extractionEncounterDAO" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

    <bean id="extractionObsService"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.extractionemr.api.service.impl.ExtractionObsServiceImpl">
                <property name="dao" ref="extractionObsDAO" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.extractionemr.api.service.ExtractionPatientService</value>
                <ref bean="extractionPatientService" />
            </list>
        </property>
    </bean>

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.extractionemr.api.service.ExtractionEncounterService</value>
                <ref bean="extractionEncounterService" />
            </list>
        </property>
    </bean>

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.extractionemr.api.service.ExtractionObsService</value>
                <ref bean="extractionObsService" />
            </list>
        </property>
    </bean>



    <!-- Wraps NigeriaemrService methods in DB transactions and OpenMRS interceptors,
    which set audit info like dateCreated, changedBy, etc.-->
    <bean id="extractionemrService"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.extractionemr.api.service.impl.ExtractionemrServiceImpl">
                <property name="dao" ref="extractionemrDao" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>


    <!-- Adds NigeriaemrService to OpenMRS context so it can be accessed
    calling Context.getService(NigeriaemrService.class) -->
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.extractionemr.api.service.ExtractionemrService</value>
                <ref bean="extractionemrService" />
            </list>
        </property>
    </bean>
</beans>
